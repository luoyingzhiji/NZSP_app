/* pages/my/my.wxss */
.my{
  position: relative;
  /* overflow: scroll; */
  overflow: hidden;
}
.certificate{
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
}
.certificate-content{
  width: 100%;
  height: 1200rpx;
  box-sizing: border-box;
  padding:106rpx 60rpx 180rpx;
  font-size: 0;
  position: relative;
}
.certificate-content image{
  width: 100%;
  height: 100%;
}
button::after{
    border:none;
}
.certificate-name{
  font-size: 36rpx;
  color: #000;
  font-weight: 600;
  position: absolute;
  top: 604rpx;
  left: 140rpx;
}
.mask{
  width: 100%;
  height: 460px;
  background-color: rgba(0, 0, 0, .7);
  position: absolute;
  top: 0;
  left: 0;
  text-align: center;
}
.mask-content{
  margin-top: 94px;
}
.mask image{
  width: 40px;
  height: 40px;
}
.unlock{
  font-size: 22rpx;
  color: #fff;
  margin-top: 16rpx;
}
.unlock image{
  width: 4px;
  height: 7px;
  margin-left: 10rpx;
}
.user-info{
  width: 100%;
  background-color: #fff;
  border-radius: 30rpx 30rpx 0 0;
  position: absolute;
  
  left: 0;
   padding: 0 50rpx;
  box-sizing: border-box;
  z-index: 200
}
.user-img{
  width: 87px;
  height: 87px;
  border-radius: 50%;
  margin: 0 auto;
  margin-top: -43.5px;
  border: 3px solid #fff;
  box-shadow:4px 3px 10px 0px rgba(0,0,0,0.1);
  position: relative;
}
.user-img image{
  width: 100%;
  height: 100%;
  vertical-align: middle;
  border-radius: 50%;
}
.user-img .user-badge{
  width: 22px;
  height: 24px;
  position: absolute;
  bottom: 0;
  right: 0;
}
.login-btn{
  width: 100px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  background-color: #000;
  border-radius: 20px;
  margin:25px auto;
}
.login-btn text{
  font-size: 30rpx;
  color: #fff;
  
}
.login-btn image{
  width: 16rpx;
  height: 24rpx;
  margin-left: 10rpx;
}
.user-location-list{
  width: 100%;
  margin: 10px auto;
}
.user-location-list image{
  width: 38px;
  height: 40px;
  margin: 2px;
}
.user-info-content{
  width: 100%;
 
}
.user-info-content-grade-strategy{
  display: flex;
  justify-content:space-between;
}
.user-info-content-grade ,.user-info-content-strategy{
  width: 316rpx;
  height: 64px;
  border: 1px solid rgba(0, 0, 0, .08);
  border-radius: 10px;
  text-align: center;
  padding-top: 24rpx;
  box-sizing: border-box;
}
.user-info-content-grade image ,.user-info-content-strategy image{
  width: 18px;
  height: 22px;
}
.user-info-content-grade text ,.user-info-content-strategy text{
  font-size: 24rpx;
  color: #000;
  display: block;
  /* margin-top: 8rpx; */
}
.user-banner{
  width: 100%;
  height: 90px;
  margin: 10px 0;
  border-radius: 20rpx;
}
.user-banner image{
  width: 100%;
  height: 100%;
   border-radius: 20rpx;
}
.select-list{
  width: 100%;
  padding-bottom: 30px;
}
.select-list-content{
  width: 100%;
  height: 60px;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  justify-content:space-between;
  align-items:center;
  border-bottom: 1px solid rgba(0, 0, 0, .08);
}
.select-list-content-text{
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
}
.select-list-content image{
  width: 5px;
  height: 9px;
}
.user-info-login{
  width: 100%;
  text-align: center;
  margin:10px auto;
}
.user-name{
  font-size: 38rpx;
  color: #000000;
  font-weight: 600;
}
.user-info-site{
  height: 22rpx;
  line-height: 22rpx;
  margin-top: 10rpx;
}
.user-info-site image{
  width: 7px;
  height: 9px;
  margin-right: 4px;
}
.user-info-site text{
  font-size: 22rpx;
  margin-left:3px;
  color: rgba(0, 0, 0, .3)
}
.user-operation{
  width: 120rpx;
  position: fixed;
  right: 0;
  top: 370px;
  z-index: 22;
  text-align: center;
  font-size: 0;
}
.user-operation-img{
  width: 120rpx;
  height: 72rpx;
  background-color:#fff;
  display: flex;
  align-items: center;
  box-shadow:0 8rpx 24rpx 0 rgba(0,0,0,0.08);
  border-radius:38rpx 0 0 38rpx;
  border:1rpx solid rgba(0,0,0,0.08);
  margin-bottom: 16rpx;

}
.user-operation-img image{
  width: 30rpx;
  height: 34rpx;
  /* margin-bottom: 18px; */
  margin-left: 24rpx;
}
.user-operation-img text{
  margin-left: 8rpx;
  font-size:22rpx;
color:rgba(0,0,0,1);
line-height:32rpx;
}
.certificate-star{
  width: 246rpx;
  height: 43px;
  position: absolute;
  top: 854rpx;
  left: 134rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.certificate-star .before{
  width: 114rpx;
  height: 45px;
}
.certificate-star .star-num{
  width: 132rpx;
  height: 45px;
}
.user-activity{
  width: 100%;
  padding: 11px 0 12px 22px;
  box-sizing: border-box;
  background:rgba(255,255,255,1);
  border-radius:10px;
  border:1px solid rgba(0,0,0,0.08);
}
.user-title{
  font-size: 24rpx;
  color: #2FBAF5;
}
.user-activity-title{
  display: flex;
  align-items: center;
  margin-top: 2px;
}
.user-activity-title-text{
  max-width: 400rpx;
  font-size: 36rpx;
  color: #000000;
  font-weight: bold;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.user-activity-title-block{
  width: 100rpx;
  height: 17px;
  color: #fff;
  background-color: #2FBAF5;
  border-radius:2px;
  display: flex;
  align-items: center;
  margin-left: 26rpx;
  font-size: 20rpx;
  justify-content: center;
}
.user-activity-bottom{
  display: flex;
  align-items: center;
}
.user-activity-site{
  display: flex;
  align-items: center;
}
.user-activity-site image{
  width: 12px;
  height: 12px;
  /* vertical-align: middle; */
}
.user-activity-site text{
  font-size: 22rpx;
  color: #000;
  margin-left: 2px;
}
.user-activity-time{
  margin-left: 66rpx;
}
.user-activity-time text{
  font-size: 22rpx;
  color: rgba(0, 0, 0, .3)
}

